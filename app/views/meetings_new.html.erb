<!DOCTYPE html>
<html>

<div class="ui-title" data-role="header" align="left" data-position="fixed">
  <a href="<%= meetings_edits_path %>" class="ui-btn-left" data-theme="a" data-rel="" data-icon="back">Back</a>
  <h1>Rocket Tips</h1>
</div>

    <%= form_for(@meeting) do |meeting| %>
    <fieldset>
      <div class="control-group custom-textbox">

        <%= meeting.label :racecourse %>
        <%= meeting.select :racecourse_id, @racecourses %>

        <br/>
        <%= meeting.label :event %>
        <%= meeting.text_field :event %>

        <br/>
        <%= meeting.label :date %>
        <%= meeting.text_field :date %>

        <br/>
        <%= meeting.submit 'Save', class: 'btn btn-large btn-primary' %>
      </div>
    </fieldset>
<% end %>

</div>
</html>